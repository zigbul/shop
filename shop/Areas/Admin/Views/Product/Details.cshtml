@using OnlineShopWebApp.Models

@model Product;

<div class="row">
    <nav class="col-3">
        @await Html.PartialAsync("AdminNav")
    </nav>
    <div class="col-9">
        <div class="d-flex justify-content-centers gap-2">
            <div>
                <img width="300" height="300" src="@Model.ImageUrl" />
            </div>
            <div>
                <h3>Название: @Model.Name</h3>
                <p>Цена: @Model.Price</p>
                <p>Описание: @Model.Description</p>

                <a asp-area="Admin"
                   asp-controller="Product"
                   asp-action="Edit"
                   asp-route-id="@Model.Id">
                    Редактировать
                </a>

                <a asp-area="Admin"
                   asp-controller="Home"
                   asp-action="Products">
                    Вернуться
                </a>
            </div>
        </div>
    </div>
</div>
