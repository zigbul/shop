@using OnlineShopWebApp.Models

@model ProductViewModel

<div class="row">
    <nav class="col-3">
        @await Html.PartialAsync("AdminNav")
    </nav>
    <div class="col-9">
        <h2>Редактирование продукта</h2>

        <form class="d-flex flex-column gap-2" method="post">
            <input asp-for="Id" type="hidden" value="@Model.Id" />

            <div>
                <label asp-for="Name">Название</label><br />
                <input asp-for="Name" value="@Model.Name" /><br />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div>
                <label asp-for="Price">Цена</label><br />
                <input asp-for="Price" type="number" step="0.01" value="@Model.Price" /><br />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div>
                <label asp-for="Description">Описание</label><br />
                <input asp-for="Description" value="@Model.Description" /><br />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div>
                <label asp-for="ImageUrl">Ссылка на фото</label><br />
                <input asp-for="ImageUrl" value="@Model.ImageUrl" /><br />
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>

            <div>
                <button class="btn btn-success"
                        type="submit"
                        asp-area="Admin"
                        asp-controller="Product"
                        asp-action="Edit">
                    Сохранить
                </button>

                <a class="btn btn-dark"
                   asp-area="Admin"
                   asp-controller="Home"
                   asp-action="Products">
                    Назад
                </a>
            </div>
        </form>
    </div>
</div>

