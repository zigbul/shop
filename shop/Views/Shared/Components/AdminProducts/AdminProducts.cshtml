@using OnlineShopWebApp.Models

@model List<Product>

<h2>Список продуктов</h2>
<a>Добавить новый продукт</a>

@if (Model.Count == 0)
{
    <p>Список продуктов пуст</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Цена</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                @await Component.InvokeAsync("AdminProduct", new { product = product })
            }
        </tbody>
    </table>
}