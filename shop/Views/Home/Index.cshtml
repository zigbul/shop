@using OnlineShopWebApp.Models

@model List<ProductViewModel>;

<div class="text-center">
    <form method="get" class="mb-3">
        <input type="text" placeholder="Поиск" name="searchName" value="@ViewBag.SearchName" />
        <button type="submit" asp-controller="Home" asp-action="Index">Найти</button>
        <a class="btn" asp-controller="Home" asp-action="Index">Отмена</a>
    </form>

    <ul class="row">
        @foreach (var product in Model)
        {
            <li class="col-3 card shadow">
                <div class="card-body">
                    <img class="card-img-top" width="100" height="250" src="@product.ImageUrl" />
                    <a style="color: black"
                       asp-controller="Product"
                       asp-action="Index"
                       asp-route-id="@product.Id">
                        <h5>@product.Name</h5>
                    </a>
                    <p>Цена: @product.Price.ToString("0.00") руб.</p>
                    <a class="btn btn-success"
                       asp-controller="Cart"
                       asp-action="Add"
                       asp-route-productId="@product.Id"
                       role="button">
                        Добавить в корзину
                    </a>
                </div>
            </li>
        }
    </ul>
</div>
